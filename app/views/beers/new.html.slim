.row
  .span6.offset3
    = form_for @beer, html: { class: 'form-horizontal'} do |f|
      fieldset
        legend Add A Beer
        - if @beer.errors.any?
          .alert.alert-error
            = alert_close
            ul.unstyled
              - @beer.errors.full_messages.each do |error|
                li = error

        .control-group
          = f.label :name, class: 'control-label'
          .controls
            = f.text_field :name, tabindex: 1, autofocus: true

        .form-actions
          = f.submit 'Add Beer', class: 'btn btn-primary btn-large', tabindex: 2
